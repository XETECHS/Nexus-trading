<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="purchase_order_view" model="ir.ui.view">
            <field name="name">purchase.order.view.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button name="preview_purchase_order" type="object" class="oe_stat_button" icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Supplier</span>
                                <span class="o_stat_text">Preview</span>
                            </div>
                        </button>
                </div>

                <xpath expr="//notebook" position="inside">
                    <page string="Supplier Signature" name="supplier_signature">
                            <group>
                                <field name="signed_by"/>
                                <field name="signed_on"/>
                                <field name="signature" widget="image"/>
                            </group>
                        </page>
                </xpath>
            </field>
        </record>
    </data>

</odoo>
